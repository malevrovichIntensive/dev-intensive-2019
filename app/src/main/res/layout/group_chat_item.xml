<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <ru.skillbranch.devintensive.ui.custom.AvatarImageView
        android:id="@+id/iv_group_icon_avatar"
        android:layout_width="@dimen/avatar_icon_size"
        android:layout_height="@dimen/avatar_icon_size"
        app:avatar_border_width="0dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_group_icon_avatar"
        android:textSize="14sp"
        android:text = "Group name"
        android:textColor="?attr/colorPrimaryDark"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/tv_last_msg_date_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="01.07.03"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_group_name"
        android:layout_toEndOf="@id/iv_group_icon_avatar"
        android:textColor="?attr/colorPrimary"
        android:layout_marginRight="4dp"
        tools:text = "\@John Doe:"/>


    <TextView
        android:id="@+id/tv_message_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_author"
        android:layout_below="@id/tv_group_name"
        android:textColor="@color/color_gray_dark"
        android:textSize="14sp"
        android:text="Сообщений пока нет"/>

    <TextView
        android:id="@+id/tv_group_counter"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:minWidth="20dp"
        android:background="@drawable/bg_counter"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tv_message_group"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="999+"
        android:paddingHorizontal="4dp"
        tools:ignore="SmallSp" />


</RelativeLayout>