<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_normal_16"
    tools:ignore="HardcodedText">

    <ImageButton
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/btn_check_size"
        android:layout_height="@dimen/btn_check_size"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/spacing_small_8"
        android:background="@drawable/ic_baseline_check_24"
        android:backgroundTint="?attr/colorPrimary"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <ru.skillbranch.devintensive.ui.custom.AvatarImageView
        android:layout_toEndOf="@id/iv_selected"
        android:id="@+id/iv_icon_avatar"
        android:layout_width="@dimen/avatar_icon_size"
        android:layout_height="@dimen/avatar_icon_size"
        app:avatar_border_width="0dp"
        android:layout_marginEnd="16dp"/>

    <View
        android:id="@+id/online_indicator"
        android:layout_height="12dp"
        android:layout_width="12dp"
        android:layout_alignEnd="@id/iv_icon_avatar"
        android:layout_alignBottom="@id/iv_icon_avatar"
        android:background="@drawable/bg_online_indicator"/>

    <TextView
        android:id="@+id/tv_chat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_icon_avatar"
        android:textSize="14sp"
        android:text = "John Doe"
        android:textColor="?attr/colorPrimaryDark"
        android:fontFamily="sans-serif-medium" />


    <TextView
        android:id="@+id/tv_last_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_icon_avatar"
        android:layout_below="@id/tv_chat_name"
        android:textColor="@color/color_gray_dark"
        android:textSize="14sp"
        android:text="Сообщений пока нет"/>
</RelativeLayout>